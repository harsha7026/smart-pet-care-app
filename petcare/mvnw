# ----------------------------------------------------------------------------
# Apache Maven Wrapper startup batch script, version 3.3.2
# ----------------------------------------------------------------------------

set -euf

# OS specific support.
# Add default JVM options here if desired.

if [ "$MAVEN_SKIP_RC" != "" ]; then
  mvn_skip_rc=1
fi

get_maven_dir() {
  if [ "${XDG_CONFIG_HOME-}" != "" ]; then
    printf %s "${XDG_CONFIG_HOME}/maven"
  else
    printf %s "${HOME}/.m2"
  fi
}

concat_lines() {
  # Preserve backslash at end of the line.
  # shellcheck disable=SC2162
  while IFS= read -r line || [ -n "$line" ]; do
    printf "%s" "$line"
  done
}

log() {
  if [ "${MVNW_VERBOSE-}" != "" ]; then
    printf '%s\n' "$@"
  fi
}

BASE_DIR=$(cd "$(dirname "$0")"; pwd -P)
MAVEN_USER_HOME="${MAVEN_USER_HOME:-$(get_maven_dir)}"
MAVEN_PROJECTBASEDIR=${MAVEN_BASEDIR:-"$BASE_DIR"}

if [ -z "${JAVA_HOME-}" ]; then
  JAVACMD="$(\command -v java)"
  if [ -z "$JAVACMD" ]; then
    echo "Java not found. Please set JAVA_HOME." >&2
    exit 1
  fi
else
  JAVACMD="$JAVA_HOME/bin/java"
  if [ ! -x "$JAVACMD" ]; then
    echo "JAVA_HOME is set to an invalid directory: $JAVA_HOME" >&2
    exit 1
  fi
fi

while [ $# -gt 0 ]; do
  case "$1" in
    --version|-v)
      MAVEN_OPTS="${MAVEN_OPTS-} -Dmaven.version.show=true"
      shift
      ;;
    --quiet|-q)
      MAVEN_OPTS="${MAVEN_OPTS-} -Dorg.slf4j.simpleLogger.defaultLogLevel=error"
      shift
      ;;
    --debug|-X)
      MAVEN_OPTS="${MAVEN_OPTS-} -Dorg.slf4j.simpleLogger.defaultLogLevel=debug"
      shift
      ;;
    --no-transfer-progress)
      MAVEN_OPTS="${MAVEN_OPTS-} -Dorg.slf4j.simpleLogger.showThreadName=false -Dorg.slf4j.simpleLogger.showDateTime=false -Dorg.slf4j.simpleLogger.showLogName=false -Dorg.slf4j.simpleLogger.levelInBrackets=true"
      shift
      ;;
    *)
      break
      ;;
  esac
done

WRAPPER_JAR="${MAVEN_PROJECTBASEDIR}/.mvn/wrapper/maven-wrapper-3.3.2.jar"
WRAPPER_LAUNCHER=org.apache.maven.wrapper.MavenWrapperMain

# Use the wrapper jar if it exists, otherwise try to download it.
if [ ! -r "$WRAPPER_JAR" ]; then
  LOG_PREFIX="[mvnw]"
  DOWNLOAD_URL="https://repo.maven.apache.org/maven2/org/apache/maven/wrapper/maven-wrapper/3.3.2/maven-wrapper-3.3.2.jar"
  echo "$LOG_PREFIX Downloading Maven Wrapper "$DOWNLOAD_URL""
  mkdir -p "${MAVEN_PROJECTBASEDIR}/.mvn/wrapper"
  if command -v curl >/dev/null 2>&1; then
    curl -fsSL -o "$WRAPPER_JAR" "$DOWNLOAD_URL"
  elif command -v wget >/dev/null 2>&1; then
    wget -q -O "$WRAPPER_JAR" "$DOWNLOAD_URL"
  else
    echo "$LOG_PREFIX ERROR: curl or wget required to download Maven Wrapper." >&2
    exit 1
  fi
fi

if [ ! -r "$WRAPPER_JAR" ]; then
  echo "Could not find or download $WRAPPER_JAR" >&2
  exit 1
fi

log "Using MAVEN_OPTS: ${MAVEN_OPTS-}"
exec "$JAVACMD" ${MAVEN_OPTS-} -Dmaven.multiModuleProjectDirectory="$MAVEN_PROJECTBASEDIR" -classpath "$WRAPPER_JAR" "$WRAPPER_LAUNCHER" "$@"
